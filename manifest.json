{
	"manifest_version": 2,

	"name": "Don't miss your shuttle",
	"description": "This extension will notify you when your shuttle is coming",
	"version": "1.0",

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"page_action": {
		"default_icon": "bus_64.png",
		"default_title": "I will notify you when your shuttle is coming! :)", 
		"default_popup": "popup.html"
	},

	"icons": {
		"64": "bus_64.png",
		"128": "bus_128.png"
	},

	"permissions": [
		"declarativeContent",
		"activeTab",
		"https://ajax.googleapis.com/"
	],
	
	"content_scripts": [
		{
			"matches": ["*://shuttle.brown.edu/*"],
			"js": ["notifyme.js"]
		}
	]
}